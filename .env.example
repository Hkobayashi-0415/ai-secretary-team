# AI秘書チーム・プラットフォーム 環境変数設定
# 使用方法: cp .env.example .env してから実際の値を設定してください

# =============================================================================
# API設定（開発・テスト用）
# =============================================================================

# Google Gemini API（テスト環境用）
# 注意: 本番環境では必ず環境変数またはシークレット管理を使用してください
GEMINI_API_KEY=your_gemini_api_key_here

# 外部API設定（オプション）
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# データベース設定
# =============================================================================
DATABASE_URL=postgresql://ai_secretary_user:ai_secretary_password@localhost:5432/ai_secretary
POSTGRES_DB=ai_secretary
POSTGRES_USER=ai_secretary_user
POSTGRES_PASSWORD=ai_secretary_password

# =============================================================================
# Redis設定
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# アプリケーション設定
# =============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your_secret_key_here_change_in_production

# CORS設定
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ファイルアップロード設定
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# 音声設定
VOICE_ENABLED=true
DEFAULT_VOICE_PROVIDER=google_tts

# セキュリティ設定
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# 開発環境専用設定
# =============================================================================
# 開発環境でのみ使用する設定
DEV_MODE=true
SKIP_API_VALIDATION=false  # APIキーの検証をスキップするかどうか 