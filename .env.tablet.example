# AI秘書チーム・プラットフォーム タブレット環境設定
# このファイルはタブレット環境でのみ使用してください

# =============================================================================
# API設定（タブレット用）
# =============================================================================

# Google Gemini API（タブレット環境用）
# 実際のAPIキーを設定してください
GEMINI_API_KEY=your_actual_gemini_api_key_here

# 外部API設定（オプション）
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# データベース設定
# =============================================================================
DATABASE_URL=postgresql://ai_secretary_user:ai_secretary_password@postgres:5432/ai_secretary
POSTGRES_DB=ai_secretary
POSTGRES_USER=ai_secretary_user
POSTGRES_PASSWORD=ai_secretary_password

# =============================================================================
# Redis設定
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# アプリケーション設定
# =============================================================================
ENVIRONMENT=development
DEBUG=false
SECRET_KEY=tablet_secret_key_change_in_production

# CORS設定（タブレット用）
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://192.168.1.100:3000

# ファイルアップロード設定
MAX_FILE_SIZE=5242880  # 5MB（タブレット用に制限）
UPLOAD_DIR=./uploads

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# 音声設定
VOICE_ENABLED=true
DEFAULT_VOICE_PROVIDER=google_tts

# セキュリティ設定
JWT_SECRET_KEY=tablet_jwt_secret_key_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60  # タブレット用に延長

# =============================================================================
# タブレット環境専用設定
# =============================================================================
DEV_MODE=false
SKIP_API_VALIDATION=false
TABLET_MODE=true
TOUCH_OPTIMIZED=true 